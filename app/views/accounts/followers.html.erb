<% content_for(:header) do 
     javascript_include_tag "https://js.pusher.com/3.0/pusher.min.js", "pusher_followers.js", "data-turbolinks-track" => true
   end %>

<!-- use this for pagination of results https://rubygems.org/gems/kaminari -->

<%= form_tag(accounts_followers_path({:id=>@account.id, :update=>true}), remote: true) do

  submit_tag('Update')

end %>

<h1><%=@account[:name] %> followers list</h1>

<div id="paginator" data-page=<%=page %>>
<%= paginate @followers %>
</div>
<%= 
content_tag :ul, id: 'followers_list' do 
	@followers.each do |f| %>
    <li><%=f.follower%></li>
	<%end

end %>
	
