<% content_for(:header) do %>
  <script src="https://js.pusher.com/3.0/pusher.min.js"></script>
<% end %>
<h1>Accounts</h1>
<p id="notice"><%= notice %></p>
<ul>
  <% @accounts.each do |account| %>
    <li>Nome: <%= account.name %></li>
    <li>Followers:  <%=content_tag(:span, account.followers, id: 'followers_'+account.name)  %></li>
    <li>Following: <%=content_tag(:span, account.friends, id: 'friends_'+account.name)  %></li>
    <%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Followers', accounts_followers_path({:id=>account}) %>
    <%= link_to 'Friends', accounts_friends_path({:id=>account}) %>
    <hr>
  <% end %>
</ul>

<%= link_to "Nuovo account", accounts_new_path %>

